<!-- Projects -->

<h2>Projects</h2>
<% @projects.each do |project| %>
  <div class="project">
    <h3><%= project.title %></h3>
    <p><%= project.about %></p>
    <%= link_to 'GitHub', project.github_link, target: '_blank' %>
    <% if project.image_url.present? %>
      <%= image_tag project.image_url, alt: project.title %>
    <% end %>
  </div>
<% end %>