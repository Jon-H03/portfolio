<!-- Projects -->
<h2 class="projects-header">Projects</h2>

<% @projects.each do |project| %>
  <div class="project">
    <h3><%= project.title %></h3>
    <h4><%= project.category %></h4>
    <h5>Technologies: <%= project.technologies %></h5>
    <p><%= project.about %></p>
    <%= link_to project.github_link, target: '_blank', class: 'github-icon' do %>
      <i class="fab fa-github"></i>
    <% end %>
  </div>
<% end %>
